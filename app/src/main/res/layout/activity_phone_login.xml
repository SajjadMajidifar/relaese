<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhoneLoginActivity">

    <EditText
        android:id="@+id/phone_number_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write phone number here..."
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="@drawable/inputs"
        android:drawableStart="@drawable/phone"
        android:padding="8dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="180dp" />

    <EditText
        android:id="@+id/verification_code_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write verification caode here..."
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:background="@drawable/inputs"
        android:drawableStart="@drawable/password"
        android:padding="5dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/phone_number_input"
        android:visibility="invisible"/>


    <Button
        android:id="@+id/send_verification_code_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Verefication Code"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="19sp"
        android:background="@drawable/buttons"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="17dp"
        android:layout_below="@id/verification_code_input"/>

    <Button
        android:id="@+id/verify_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verify"
        android:textAllCaps="false"
        android:textColor="@android:color/background_light"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="19sp"
        android:background="@drawable/buttons"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginTop="4dp"
        android:layout_below="@id/send_verification_code_button"
        android:visibility="invisible"/>

</RelativeLayout>